@model IEnumerable<Customer>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="text-center">
            <h2>Library customers</h2>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>

                    <th scope="col">FirstName</th>
                    <th scope="col">LastName</th>
                    <th>
                        <a asp-action="AddOrEditCustomer" class="btn btn-outline-dark">New</a>
                    </th>
                </tr>
            </thead>
           <tbody>
                @foreach (var item in Model)
                {
                    <tr>


                        
                        <td>@Html.DisplayFor(modelItem => item.CustomerFirstName)</td>
                        <td> @Html.DisplayFor(modelItem => item.CustomerLastName)</td>

                        <td>
                            <form asp-action="Delete" asp-route-id="@item.CustomerID">
                                <a asp-action="AddOrEditCustomer" asp-route-id="@item.CustomerID" class="btn btn-outline-warning">Update</a>

                                <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure that you want to delete this customer?')">Delete</button>
                                <a asp-action="Details" asp-route-id="@item.CustomerID" class="btn btn-outline-info">Details</a>
                            </form>
                        </td>
                    </tr>


                }
                </tbody>


        </table>

    </div>

</div>
